{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "outDir": "../release/backend/",
        "sourceMap": true,
        "mapRoot": "../release/backend/",
        "target": "es2016",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./*.ts",
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        "dist",
        "vagrant",
        "typings"
    ]
}